#!/usr/bin/env bash
hc() {
    #echo "hc $@" >&2 ;
    herbstclient "$@" ;
}

pad() {
	size=$2 
	pad_height=$(hc getenv pad_height)
	if [ $1 ]; then
		hc pad 0 $pad_height 0 0 0
		hc unsetenv padded
	else
		hc pad 0 $((size+pad_height)) $size $size  $size
		hc setenv padded pppp
	fi
}


if [ $(hc list_monitors | wc -l) -gt 1 ]; then
	npad=120
else
	npad=30
fi


hc lock
pad "$(hc getenv padded)" $npad
hc unlock
