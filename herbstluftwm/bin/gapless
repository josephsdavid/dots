#!/usr/bin/env bash

hc() { "${herbstclient_command[@]:-herbstclient}" "$@" ;}
hc set frame_gap 0
hc set window_gap 0
hc attr theme.normal.outer_color '#fffffa'
hc attr theme.outer_width 4
hc attr theme.border_width 4
hc attr theme.floating.border_width 4
hc set frame_active_opacity 00
hc set frame_normal_opacity 00
