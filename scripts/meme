#! /usr/bin/env nix-shell
#! nix-shell -i python3 -p python3

import sys
import os

output = list()
text = ' '.join(sys.argv[1:])

def annoyance(text):
    letter_table = {
            '0': 'zero',
            '1': 'one',
            '2': 'two',
            '3': 'three',
            '4': 'four',
            '5': 'five',
            '6': 'six',
            '7': 'seven',
            '8': 'eight',
            '9': 'nine',
            '10': 'ten',
            '?': 'question',
            '!': 'exclamation',
            '#': 'hash'
            }

    words = list()

    words.append(':clap:')

    for word in text:
        new_word = list()
        for letter in word:
            if letter.isalpha():
                letter = letter.lower()
                if letter == 'b':
                    new_word.append(':b:')
                else:
                    new_word.append(f':regional_indicator_{letter}:')
            elif letter.isdigit():
                new_word.append(f':{letter_table.get(letter)}:')
            else:
                if letter_table.get(letter):
                    new_word.append(f':{letter_table.get(letter)}:')
                else:
                    new_word.append(letter)
        new_word.append(':clap:')

        words.append(' '.join(new_word))

    return ' '.join(words)

output = annoyance(input('words here: ').split(' '))
print(output)
os.system(f"echo {output} | xclip -selection clipboard")
